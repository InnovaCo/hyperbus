<configuration>
  <property name="TAG" value="service.platform.delivery" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <withJansi>true</withJansi>
    <encoder>
      <pattern>%highlight(%.-3level) %cyan(%d{HH:mm:ss.SSS}) %yellow(%-35.35logger) %highlight(%msg) %n</pattern>
    </encoder>
  </appender>

  <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
    <syslogHost>localhost</syslogHost>
    <facility>LOCAL3</facility>
    <suffixPattern>${TAG}: %logger %n%message%n%xException%n</suffixPattern>
  </appender>

  <logger name="org.jboss.netty" level="INFO"/>
  <logger name="com.ning.http.client" level="INFO"/>
  <logger name="com.datastax" level="ERROR"/>
  <logger name="javax.management" level="INFO"/>
  <logger name="io.netty" level="INFO"/>
  <logger name="is-client" level="TRACE"/>

  <root level="TRACE">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="SYSLOG"/>
  </root>

</configuration>
