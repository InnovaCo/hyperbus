#%RAML 1.0
title: Test API
baseUri: https://test.maqdev.com
types:
  BookTag:
    enum: [new,best-seller,classics]
  BookProperties:
    type: object
    properties:
      publishYear: integer
      issn: string
      tag: BookTag
  Book:
    type: object
    properties:
      bookId: string
      authorId: string
      bookName: string
      authorName: string
      bookProperties: BookProperties
  BookTransaction:
    type: object
    properties:
      transactionId: string
  BookCreatedTransaction:
    type: object
    properties:
      transactionId: string
/authors/{authorId}/books/{bookId}:
  uriParameters:
    authorId: string
    bookId: string
  get:
    responses:
      200:
        body:
          application/json:
            type: Book
  put:
    body:
      application/json:
        type: Book
    responses:
      200:
      201:
/authors/{authorId}/books:
  uriParameters:
    authorId: string
  get:
    responses:
      200:
  post:
    body:
      application/json:
    responses:
      200:
        body:
          application/json:
            type: BookTransaction
      201:
        body:
          application/json:
            type: BookCreatedTransaction
